<Window x:Class="ToursApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ToursApp"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="75"/>
            <RowDefinition/>
            <RowDefinition Height="44"/>
        </Grid.RowDefinitions>
        <Image Source="Resources/1.jpg" HorizontalAlignment="Left" Width="96" ></Image>
        <TextBlock Text=" Header" FontSize=" 30" HorizontalAlignment ="Center"  VerticalAlignment ="Center" Height="40" Margin="335,20,353,15" Width="104"></TextBlock>
        <Grid Background ="#bae3e8" Panel.ZIndex ="-2"></Grid>
        <Grid Grid.Row=" 2" Background=" #445c93"></Grid>
        <Frame NavigationUIVisibility="Hidden"  ContentRendered="MainFrame_ContentRendered" Grid.Row="1" Name ="MainFrame"></Frame>
        <Button Content="Back" Name="BtnBack" HorizontalAlignment="Right" Click="BtnBack_Click" Height="Auto" Margin="0,22,5,23"></Button>

        <Button Content="Добавить" Grid.Row="2" HorizontalAlignment="Center" Name="BtnAdd" Click="BtnAdd_Click" Height="Auto" Margin="5,5,0,10"></Button>
        

    </Grid>
</Window>
